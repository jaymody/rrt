{
    "name": "rrt-frontend",
    "author": "Jay Mody <jaykmody@gmail.com>",
    "version": "1.0.0",
    "description": "A rust based ray tracer that runs in your browser via wasm.",
    "scripts": {
        "build-wasm": "wasm-pack build --target web --release ./crates/rrt-wasm",
        "dev": "npm run build-wasm && webpack-dev-server --open"
    },
    "devDependencies": {
        "html-webpack-plugin": "^5.5.1",
        "wasm-pack": "^0.11.1",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.15.0"
      },
      "dependencies": {
        "rrt-wasm": "file:./crates/rrt-wasm/pkg",
        "comlink": "^4.3.1",
        "wasm-feature-detect": "^1.3.0"
      }
}
